<div>
    <form name="bankCreateForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>Create New Bank</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>Bank Code</label>
                <input class="form-control" type="text" name="BankCode" ng-model="vm.bank.bankCode" required />
            </div>
            <div class="form-group">
                <label>@L("Name")</label>
                <input type="text" name="BankName" class="form-control" ng-model="vm.bank.bankName" required />
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="bankCreateForm.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        </div>
    </form>
</div>