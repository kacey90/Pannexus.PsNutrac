<div ng-controller="app.views.crops.index as vm">
    <h1>Crops</h1>
    <div class="row">
        <div class="col-md-12">
            <button ng-click="vm.openNewCropModal()" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> New Crop</button>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="crop in vm.crops">
                        <td>{{crop.id}}</td>
                        <td>{{crop.code}}</td>
                        <td>{{crop.name}}</td>
                        <td>{{crop.description}}</td>
                        <td><a class="btn btn-sm btn-info" ng-href="#/crops/{{crop.id}}">Details <i class="fa fa-arrow-circle-right"></i></a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>