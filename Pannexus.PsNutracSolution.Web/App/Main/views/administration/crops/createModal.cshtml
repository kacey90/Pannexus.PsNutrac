<div>
    <form name="cropCreateForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>Create New Bank</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>Code</label>
                <input class="form-control" type="text" name="Code" ng-model="vm.crop.code" required />
            </div>
            <div class="form-group">
                <label>@L("Name")</label>
                <input type="text" name="Name" class="form-control" ng-model="vm.crop.name" required />
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea name="Description" class="form-control" rows="3" ng-model="vm.crop.description" />
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="cropCreateForm.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        </div>
    </form>
</div>